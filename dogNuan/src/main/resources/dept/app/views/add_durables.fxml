   <children>
      <Button fx:id="addDurablesBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" stylesheets="@../Theme/pastel.css" text="Back" />
      <Pane fx:id="addDurablesPane" layoutX="55.0" layoutY="120.0" prefHeight="440.0" prefWidth="690.0">
         <children>
            <Label fx:id="errorLabel" layoutX="495.0" layoutY="286.0" text="errorLabel" textFill="RED" />
            <Button fx:id="addDurablesButton" layoutX="495.0" layoutY="313.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />
            <GridPane layoutX="341.0" layoutY="106.0" prefHeight="180.0" prefWidth="307.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
