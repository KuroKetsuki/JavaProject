               </children>
            </GridPane>
            <ImageView fx:id="showImage" fitHeight="214.0" fitWidth="200.0" layoutX="61.0" layoutY="89.0" pickOnBounds="true" preserveRatio="true" />
            <Hyperlink layoutX="118.0" layoutY="315.0" onAction="#handleUploadButton" text="Upload Picture" />
         </children>
      </Pane>
      <Label fx:id="addDurableLabel" layoutX="322.0" layoutY="73.0" text="Add Durables" />
   </children>
