<AnchorPane fx:id="adminChangeBackground" prefHeight="600.0" prefWidth="800.0" stylesheets="@../Theme/pastel.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dept.app.controllers.admin.AdminChangeProfileController">
   <children>
      <Button fx:id="adminChangeBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" />
      <GridPane layoutX="34.0" layoutY="209.0">
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <Pane fx:id="adminChangePane" layoutX="45.0" layoutY="75.0" prefHeight="474.0" prefWidth="700.0">
         <children>
            <GridPane layoutX="377.0" layoutY="125.0" prefHeight="138.0" prefWidth="280.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="adminOldPassword" text="Current Password :">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="adminNewPassword" text="New Password :" GridPane.rowIndex="1">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="adminCheckPassword" text="Confirm Password :" GridPane.rowIndex="2">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="checkPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <PasswordField fx:id="oldPasswordField" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <Label fx:id="errorLabel" layoutX="377.0" layoutY="283.0" text="errorLabel" textFill="RED" />
            <Button fx:id="adminApply" layoutX="481.0" layoutY="330.0" mnemonicParsing="false" onAction="#onApplyButtonClick" text="Apply" />
            <ImageView fx:id="addImageAdmin" fitHeight="207.0" fitWidth="200.0" layoutX="70.0" layoutY="90.0" pickOnBounds="true" preserveRatio="true" />
            <Hyperlink layoutX="125.0" layoutY="350.0" onAction="#handleUploadButton" text="Upload Picture" />
         </children>
      </Pane>
   </children>
</AnchorPane>
